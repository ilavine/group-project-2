<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sandwich Maker</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Happy+Monkey&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="public/css/jass.css\" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/css/style.css" />
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">ðŸ¥ª Sandwich Maker</a>
      <ul class="nav justify-content-end">
        <li class="nav-item">
          <a class="nav-link" href="#">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Sign Up</a>
        </li>
      </ul>
    </nav>
    <section class="greeting">
      {{#if logged_in}}
        <h2>Welcome, {{name}}! <i class="nes-ash small"></i></h2>
        <button
          class="no-button justify-content-center text-centered"
          id="logout"
        >Logout</button>
      {{else}}
        <h2>Welcome!</h2>
        <h4>Create an Account to Share Your Favorite Sandwich Recipe</h4>
        <ul style="list-style: none;">
          <li><a
              href="/signup"
              class="btn btn-primary btn-lg justify-content-end"
              role="button"
            >Sign Up</a></li>
          <li><a
              href="/login"
              class="btn btn-outline-primary justify-content-end"
              role="button"
            >Login</a></li>
        </ul>
      {{/if}}
    </section>

    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{body}}}
    </main>

    <footer>
      <div class="container">
        <span class="text-muted">Group 4</span>
      </div>
    </footer>

    {{! bootstrap files }}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}<script></script>{{/if}}

    {{! jQuery files }}
    <script
      src="https://code.jquery.com/jquery-3.6.3.min.js"
      integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU="
      crossorigin="anonymous"
    ></script>

  </body>

</html>