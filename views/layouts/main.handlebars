<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sandwich Maker</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Happy+Monkey&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/jass.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    
    <nav class="navbar navbar-expand-lg bg-body-tertiary ">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">ðŸ¥ª Sandwich Maker</a>
        {{#if logged_in}}
        <ul class="nav justify-content-end"></ul>
          <h2> {{name}}</h2>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        {{else}}
          <ul class="nav nav-pills justify-content-end">
              <li class="nav-item">
                <a class="nav-link active" id="signup-btn" aria-current="page" href="/signup">Sign Up</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
          </ul>
      </div>
    </nav>
    {{/if}}

     <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{body}}}
     </main>

    <section class="greeting">
      {{#if logged_in}}
        <h2>Welcome, {{name}}! </h2>
        <button
          class="no-button justify-content-center text-centered mb-3"
          id="logout"
        >Logout</button>
      {{else}}
        <h2>Welcome!</h2>
        <h4>Create an Account to Share Your Favorite Sandwich Recipe</h4>
        <ul style="list-style: none;">
          <li><a
              href="/signup"
                id="signup-btn"
              class="btn btn-lg justify-content-end mb-3"
              role="button"
            >Sign Up</a></li>
          <li><a
              href="/login"
              class="btn btn-outline-primary justify-content-end mb-3"
              role="button"
            >Login</a></li>
        </ul>
      {{/if}}
    </section>

    <footer >
      <div class="container align-center-lg">
        <span class="text-muted">Group 4</span>
      </div>
    </footer>

    {{! bootstrap files }}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}<script></script>{{/if}}

    {{! jQuery files }}
    <script
      src="https://code.jquery.com/jquery-3.6.3.min.js"
      integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU="
      crossorigin="anonymous"
    ></script>

  </body>

</html>