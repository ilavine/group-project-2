
<form id='myForm'>
  <div class='container'>
    <h4> Choose five ingredients to make your own sandwich with!</h4>
    {{#each categories as |category|}}
      <select id='mySelect'>
        {{#each category.ingredients as |ingredient|}}
          <option values={{category.ingredients}},{{ingredient.name}}>{{ingredient.name}}</option>
        {{/each}}
      </select>
    {{/each}}
    <button type='button' id='submit' class='btn btn-secondary'>Submit</button>
  </div>
</form>


